@model List<StellerAcunMedyaAkademiPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>Hakkımda sayfası</h3>
<br />

<table class="table table-bordered"> 
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Unvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach(var item in Model)
     {
        <tr>
            <th>@item.AboutID</th>
            <td><img src="@item.ImageUrl" style="height:50px;width:50px"/></td>
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td>@item.Title</td>
            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-info">Güncelle</a></td>
        </tr>   
     }
    
</table>
<br />
<a href="/About/AddAbout" class="btn btn-outline-primary">Yeni hakkımda bilgisi ekle</a>

