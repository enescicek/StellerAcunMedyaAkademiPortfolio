@model List<StellerAcunMedyaAkademiPortfolio.Models.TblFeature>
<header class="header" id="home">
    @foreach (var item in Model)
    {
        <div class="container">
            <div class="infos">
                <h6 class="subtitle">@item.Title</h6>
                <h6 class="title">@item.NameSurname</h6>
                <p>@item.Job</p>

                <div class="buttons pt-3">
                    <button class="btn btn-primary rounded">İletişime Geçin</button>
                    <a class="btn btn-dark rounded" href="@item.CvDownloadUrl" target="_blank">CV İndir</a>
                </div>

                <div class="socials mt-4">
                    <a class="social-item" href="javascript:void(0)"><i class="ti-facebook"></i></a>
                    <a class="social-item" href="javascript:void(0)"><i class="ti-google"></i></a>
                    <a class="social-item" href="javascript:void(0)"><i class="ti-github"></i></a>
                    <a class="social-item" href="javascript:void(0)"><i class="ti-twitter"></i></a>
                </div>
            </div>
            <div class="img-holder">
                <img src="@item.ImageUrl" alt="">
            </div>
        </div>
    }


    <!-- Header-widget -->
    <div class="widget">
        <div class="widget-item">
            <h2>@ViewBag.testimonial</h2>
            <p>Referans Sayısı</p>
        </div>
        <div class="widget-item">
            <h2>@ViewBag.project</h2>
            <p>Proje Sayısı</p>
        </div>
        <div class="widget-item">
            <h2>@ViewBag.skill</h2>
            <p>Yetenek Sayısı</p>
        </div>
    </div>
</header>
